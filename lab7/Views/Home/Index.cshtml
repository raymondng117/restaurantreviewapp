@model Lab7.Models.RestaurantReview

@{
    ViewData["Title"] = "Index";
}

<h1>Restaurant Overview</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Review</a>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.Restaurants.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants.FirstOrDefault().FoodType)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Restaurants.FirstOrDefault().Rating)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Restaurants.FirstOrDefault().Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants.FirstOrDefault().Address.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants.FirstOrDefault().Address.ProvinceState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Restaurants)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodType)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.ProvinceState)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-2">Edit</a>  <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
